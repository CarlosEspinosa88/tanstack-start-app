datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id String @id @default(cuid())
  email String @unique
  name String?
  role String @default("user") // 'user' | 'admin'
  createdAt DateTime @default(now())
  todos Todo[]
}


model Todo {
  id String @id @default(cuid())
  title String
  done Boolean @default(false)
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references: [id])
  userId String
}
